<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="24dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xử lý kết quả"
        android:textColor="#009B43"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Nhập AA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận A:"
            android:textColor="#002115"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/edtAA"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:gravity="center_vertical|start"
            android:paddingStart="8dp"
            android:contentDescription="Nhập A"/>
    </LinearLayout>

    <!-- Nhập BB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận B:"
            android:textColor="#002115"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/edtBB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:gravity="center_vertical|start"
            android:paddingStart="8dp"
            android:contentDescription="Nhập B"/>
    </LinearLayout>

    <!-- Nút gửi kết quả cộng -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnsendtong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRẢ VỀ TỔNG"
            android:contentDescription="Nút trả về tổng kết quả" />

        <Button
            android:id="@+id/btnsendhieu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRẢ VỀ HIỆU"
            android:contentDescription="Nút trả về hiệu kết quả"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout>
